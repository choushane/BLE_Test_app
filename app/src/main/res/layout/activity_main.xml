<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BLE.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.BLE.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connected"
        android:textSize="100px"
        android:textColor="@color/green"
        android:layout_marginTop="200px"
        android:layout_marginLeft="500px"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="disconnect"
        android:textSize="100px"
        android:textColor="@color/red"
        android:layout_marginTop="200px"
        android:layout_marginLeft="500px"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigation"
        android:layout_marginTop="200px"
        android:layout_marginLeft="100px"/>

    <Button
        android:id="@+id/btnStraight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Straight"
        android:layout_marginTop="500px"
        android:layout_marginLeft="100px"/>

    <Button
        android:id="@+id/btnTurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Right"
        android:layout_marginTop="700px"
        android:layout_marginLeft="100px"/>

    <Button
        android:id="@+id/btnTurnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Left"
        android:layout_marginTop="900px"
        android:layout_marginLeft="100px"/>

    <Button
        android:id="@+id/btnUTurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U Turn Right"
        android:layout_marginTop="1100px"
        android:layout_marginLeft="100px"/>

    <Button
        android:id="@+id/btnMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mix"
        android:layout_marginTop="1400px"
        android:layout_marginLeft="100px"/>

    <EditText
        android:id="@+id/etDelay"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_marginTop="1400px"
        android:layout_marginLeft="400px"
        android:inputType="number"
        android:hint="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1300px"
        android:layout_marginLeft="400px"
        android:textSize="60px"
        android:text="延遲單位 millisecond"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>